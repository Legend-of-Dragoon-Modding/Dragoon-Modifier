                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xe002;" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontFamily="/Fonts/#rpg-icons" FontSize="26"/>
