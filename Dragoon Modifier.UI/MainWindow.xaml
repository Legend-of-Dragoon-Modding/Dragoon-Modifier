                                    <TextBlock x:Name="lblEnemy1HP" Grid.Column="1" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Left" FontFamily="/Fonts/#Segoe WP Semibold"/>
                                </Grid>
                            </DockPanel>
                            <DockPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="1" HorizontalAlignment="Stretch" Margin="0" >
                                <Grid HorizontalAlignment="Center" Margin="0"  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xe0bf;" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontFamily="/Fonts/#rpg-icons" FontSize="26"/>
                                    <TextBlock x:Name="lblEnemy1ATK" Grid.Column="1" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Left" FontFamily="/Fonts/#Segoe WP Semibold"/>
                                </Grid>
                            </DockPanel>
                            <DockPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="1" HorizontalAlignment="Stretch" Margin="0" >
