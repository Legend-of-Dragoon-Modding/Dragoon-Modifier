                            <TextBlock x:Name="lblEnemy2Name" Grid.Row="2" Grid.Column="0" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="/Fonts/#Segoe WP Black" FontSize="10"  />
                            <DockPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" HorizontalAlignment="Stretch" Margin="0" >
                                <Grid HorizontalAlignment="Center" Margin="0"  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xe0cb;" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontFamily="/Fonts/#rpg-icons" FontSize="26"/>
                                    <TextBlock x:Name="lblEnemy2HP" Grid.Column="1" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Left" FontFamily="/Fonts/#Segoe WP Semibold"/>
                                </Grid>
                            </DockPanel>
                            <DockPanel Grid.Row="2" Grid.Column="2" Grid.RowSpan="1" HorizontalAlignment="Stretch" Margin="0" >
                                <Grid HorizontalAlignment="Center" Margin="0"  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xe0bf;" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontFamily="/Fonts/#rpg-icons" FontSize="26"/>
                                    <TextBlock x:Name="lblEnemy2ATK" Grid.Column="1" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Left" FontFamily="/Fonts/#Segoe WP Semibold"/>
                                </Grid>
                            </DockPanel>
                            <DockPanel Grid.Row="2" Grid.Column="3" Grid.RowSpan="1" HorizontalAlignment="Stretch" Margin="0" >
                                <Grid HorizontalAlignment="Center" Margin="0"  >
                                    <Grid.ColumnDefinitions>
